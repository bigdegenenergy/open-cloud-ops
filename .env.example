# =============================================================================
# Open Cloud Ops - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=opencloudops
POSTGRES_USER=oco_user
POSTGRES_PASSWORD=change_me_to_a_strong_password

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# Cerebra (LLM Gateway)
# -----------------------------------------------------------------------------
CEREBRA_PORT=8080
CEREBRA_LOG_LEVEL=info

# LLM Provider API Keys (passed through to providers, never stored)
# These are only needed if you want to use the proxy's passthrough mode.
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# GOOGLE_API_KEY=AIza...

# -----------------------------------------------------------------------------
# Economist (FinOps Core)
# -----------------------------------------------------------------------------
ECONOMIST_PORT=8081

# Cloud Provider Credentials (for cost data ingestion)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1

# AZURE_SUBSCRIPTION_ID=
# AZURE_TENANT_ID=
# AZURE_CLIENT_ID=
# AZURE_CLIENT_SECRET=

# GCP_PROJECT_ID=
# GCP_CREDENTIALS_FILE=

# -----------------------------------------------------------------------------
# Aegis (Resilience Engine)
# -----------------------------------------------------------------------------
AEGIS_PORT=8082

# Kubernetes configuration is typically handled via kubeconfig
# KUBECONFIG=~/.kube/config

# -----------------------------------------------------------------------------
# Dashboard
# -----------------------------------------------------------------------------
DASHBOARD_PORT=3000
VITE_API_BASE_URL=http://localhost:8080

# -----------------------------------------------------------------------------
# Observability
# -----------------------------------------------------------------------------
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
